<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity" android:orientation="vertical" tools:ignore="MergeRootFrame"
    android:gravity="center_vertical|center_horizontal"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Fragment"
        android:id="@+id/btn_simple_fragment"
        android:onClick="simpleFragment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiple Fragments"
        android:id="@+id/btn_multiple_fragment"
        android:onClick="multipleFragment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewPagerFragment"
        android:text="View Pager Fragments"
        android:id="@+id/btn_view_pager" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4" />
</LinearLayout>
